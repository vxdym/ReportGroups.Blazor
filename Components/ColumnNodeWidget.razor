@using ReportGroups.Blazor.Models.Nodes
@using ReportGroups.Blazor.Models

<div class="column-node @(Node.IsExpanded ? "expanded" : "")">
    <div class="node-content">
        <div class="position-title">@Node.ReportPosition?.Name</div>
        
        @if (Node.IsExpanded)
        {
            <div class="position-details">
                <div class="detail-item">
                    <strong>ID:</strong> @Node.ReportPosition?.Id
                </div>
                <div class="detail-item">
                    <strong>Info:</strong> @Node.ReportPosition?.FurtherInformation
                </div>
            </div>
        }
    </div>
    
    @foreach (var port in Node.Ports)
    {
        <PortRenderer Port="port" Class="node-port" />
    }
</div>

@code {
    [Parameter] public ColumnNode Node { get; set; } = null!;
}